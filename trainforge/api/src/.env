# File: trainforge/api/.env.example
# Environment configuration template for TrainForge API

# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3001

# Firebase Configuration
FIREBASE_PROJECT_ID=trainforge-dev
FIREBASE_SERVICE_ACCOUNT_PATH=./config/firebase-service-account.json

# For production deployment (use these instead of service account file)
# FIREBASE_CLIENT_EMAIL=your-service-account@trainforge-dev.iam.gserviceaccount.com
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Storage Configuration
STORAGE_PATH=./storage

# Logging
LOG_LEVEL=info

# Security
JWT_SECRET=your-super-secret-jwt-key-here
API_RATE_LIMIT=100